<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= campground["name"] %></h1>
        <div style="width: 30%; margin: 25px auto">
            <form method="POST" action="/campgrounds/<%= campground["_id"] %>/?_method=PUT">
                <div class="form-group">
                    <input type="text" name="campground[name]" placeholder="Edit name" class="form-control" value="<%= campground["name"] %>">
                </div>
                <div class="form-group">
                    <input type="number" name="campground[price]" placeholder="Edit price per night" class="form-control" value="<%= campground["price"] %>">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[image]" placeholder="Edit image url" class="form-control" value="<%= campground["image"] %>">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[description]" placeholder="Edit description" class="form-control" value="<%= campground["description"] %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Edit</button>
                </div> 
            </form>
            <a href="/campgrounds/<%= campground["_id"] %>">Go back!</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>