<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit comment</h1>
        <div style="width: 30%; margin: 25px auto">
            <form method="POST" action="/campgrounds/<%= campground_id %>/comments/<%= comment["_id"] %>?_method=PUT">
                <div class="form-group">
                    <input type="text" name="comment[text]" placeholder="Enter text" class="form-control" value="<%= comment["text"] %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Edit</button>
                </div> 
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go back!</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>